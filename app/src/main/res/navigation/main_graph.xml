<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_graph"
    app:startDestination="@id/pokemonListFragment">

    <fragment
        android:id="@+id/pokemonListFragment"
        android:name="com.plcoding.jetpackcomposepokedex.presentation.ui.pokemon.PokemonListFragment"
        android:label="fragment_pokemon_list"
        tools:layout="@layout/fragment_pokemon_list" >
        <action
            android:id="@+id/action_pokemonListFragment_to_pokemonDetailedFragment"
            app:destination="@id/pokemonDetailedFragment" />
    </fragment>
    <fragment
        android:id="@+id/pokemonDetailedFragment"
        android:name="com.plcoding.jetpackcomposepokedex.presentation.ui.pokemon.detailed.PokemonDetailedFragment"
        android:label="fragment_pokemon_detailed"
        tools:layout="@layout/fragment_pokemon_detailed">
        <argument
            android:name="pokemonName"
            app:argType="string" />
        <argument
            android:name="dominantColor"
            app:argType="integer" />
    </fragment>
</navigation>